{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ESNext.Intl",
      "ES2018.Intl"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "cjs",
    "es"
  ]
}
